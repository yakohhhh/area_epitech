# Dockerfile pour le développement frontend
FROM node:20-alpine

WORKDIR /app

# Installation des dépendances système pour les outils de dev
RUN apk add --no-cache git curl

# Copie des fichiers de configuration des dépendances
COPY package*.json ./
COPY tsconfig*.json ./
COPY vite.config.ts ./
COPY .eslintrc.js ./
COPY .prettierrc ./
COPY .prettierignore ./
COPY commitlint.config.js ./
COPY jest.config.js ./

# Installation des dépendances
RUN npm ci

# Installation globale des outils de développement
RUN npm install -g @commitlint/cli husky lint-staged

# Copie du code source
COPY . .

# Configuration des permissions
RUN chmod +x /app/node_modules/.bin/*

# Port pour Vite dev server
EXPOSE 3000
EXPOSE 3001

# Commande par défaut pour le développement
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]